@model SesjaTreningowa

<h2>Edytuj Sesję</h2>

<form asp-action="Edytuj" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="DataRozpoczęcia"></label>
        <input asp-for="DataRozpoczęcia" type="datetime-local" class="form-control" />
        <span asp-validation-for="DataRozpoczęcia" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DataZakończenia"></label>
        <input asp-for="DataZakończenia" type="datetime-local" class="form-control" />
        <span asp-validation-for="DataZakończenia" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Zapisz</button>
    <a asp-action="Lista" class="btn btn-secondary">Anuluj</a>
</form>
