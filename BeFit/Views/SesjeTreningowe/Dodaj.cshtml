   @model SesjaTreningowa

<h2>Dodaj Sesję Treningową</h2>

<form asp-action="Dodaj" method="post">
    <div class="form-group">
        <label asp-for="DataRozpoczęcia"></label>
        <input name="dataRozpoczeciaDate" type="date" class="form-control" />
        <input name="dataRozpoczeciaTime" type="time" class="form-control" />
        <span asp-validation-for="DataRozpoczęcia" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DataZakończenia"></label>
        <input name="dataZakonczeniaDate" type="date" class="form-control" />
        <input name="dataZakonczeniaTime" type="time" class="form-control" />
        <span asp-validation-for="DataZakończenia" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Zapisz</button>
    <a asp-action="Lista" class="btn btn-secondary">Anuluj</a>
</form>
