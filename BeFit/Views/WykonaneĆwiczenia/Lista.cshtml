@model IEnumerable<WykonaneĆwiczenie>

<h2>Lista Wykonanych Ćwiczeń</h2>

<table class="table">
    <thead>
        <tr>
            <th>Nazwa Ćwiczenia</th>
            <th>Data Wykonania</th>
            <th>Powtórzenia</th>
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ćwiczenie in Model)
        {
            <tr>
                <td>@ćwiczenie.NazwaĆwiczenia</td>
                <td>@ćwiczenie.DataWykonania</td>
                <td>@ćwiczenie.Powtórzenia</td>
                <td>
                    <a asp-action="Edytuj" asp-route-id="@ćwiczenie.Id" class="btn btn-primary">Edytuj</a>
                    <a asp-action="Usuń" asp-route-id="@ćwiczenie.Id" class="btn btn-danger">Usuń</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Dodaj" class="btn btn-success">Dodaj Nowe Ćwiczenie</a>
