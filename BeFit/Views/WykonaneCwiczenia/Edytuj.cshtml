@model WykonaneĆwiczenie

<h2>Edytuj Ćwiczenie</h2>

<form asp-action="Edytuj" method="post">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="IdSesjiTreningowej" />

    <div class="form-group">
        <label asp-for="IdTypuĆwiczenia"></label>
        <select asp-for="IdTypuĆwiczenia" class="form-control" asp-items="ViewBag.TypyĆwiczeń"></select>
        <span asp-validation-for="IdTypuĆwiczenia" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Powtórzenia"></label>
        <input asp-for="Powtórzenia" type="number" class="form-control" />
        <span asp-validation-for="Powtórzenia" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="LiczbaSerii"></label>
        <input asp-for="LiczbaSerii" type="number" class="form-control" />
        <span asp-validation-for="LiczbaSerii" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Obciążenie"></label>
        <input asp-for="Obciążenie" type="number" step="0.1" class="form-control" />
        <span asp-validation-for="Obciążenie" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Zapisz</button>
    <a asp-action="Lista" asp-route-id="@Model.IdSesjiTreningowej" class="btn btn-secondary">Anuluj</a>
</form>
